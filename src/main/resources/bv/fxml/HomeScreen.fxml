<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="bv.MVC.HomeScreenController" 
      spacing="20" 
      alignment="CENTER" 
      styleClass="home-screen-container">

    <!-- Title -->
    <Label text="Welcome to Nanu!" 
           styleClass="home-screen-title"/>

    <!-- Start Game Button -->
    <Button text="Start Game" 
            fx:id="startGameButton" 
            onAction="#startGame" 
            styleClass="button start-btn"/>

    <!-- Exit Button -->
    <Button text="Exit" 
            fx:id="exitButton" 
            onAction="#exitApp" 
            styleClass="button exit-btn"/>
</VBox>
